<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22"
      fx:controller="com.reppuhallinta.inventory_management_sys.controller.TransactionViewController"
      xmlns:fx="http://javafx.com/fxml/1">
  <MenuBar VBox.vgrow="NEVER">
    <Menu mnemonicParsing="false" text="File">
      <MenuItem mnemonicParsing="false" text="New"/>
      <MenuItem mnemonicParsing="false" text="Open…"/>
      <Menu mnemonicParsing="false" text="Open Recent"/>
      <SeparatorMenuItem mnemonicParsing="false"/>
      <MenuItem mnemonicParsing="false" text="Close"/>
      <MenuItem mnemonicParsing="false" text="Save"/>
      <MenuItem mnemonicParsing="false" text="Save As…"/>
      <MenuItem mnemonicParsing="false" text="Revert"/>
      <SeparatorMenuItem mnemonicParsing="false"/>
      <MenuItem mnemonicParsing="false" text="Preferences…"/>
      <SeparatorMenuItem mnemonicParsing="false"/>
      <MenuItem mnemonicParsing="false" text="Quit"/>
    </Menu>
    <Menu mnemonicParsing="false" text="Edit">
      <MenuItem mnemonicParsing="false" text="Undo"/>
      <MenuItem mnemonicParsing="false" text="Redo"/>
      <SeparatorMenuItem mnemonicParsing="false"/>
      <MenuItem mnemonicParsing="false" text="Cut"/>
      <MenuItem mnemonicParsing="false" text="Copy"/>
      <MenuItem mnemonicParsing="false" text="Paste"/>
      <MenuItem mnemonicParsing="false" text="Delete"/>
      <SeparatorMenuItem mnemonicParsing="false"/>
      <MenuItem mnemonicParsing="false" text="Select All"/>
      <MenuItem mnemonicParsing="false" text="Unselect All"/>
    </Menu>
    <Menu mnemonicParsing="false" text="Help">
      <MenuItem mnemonicParsing="false" text="About Inventory Management System"/>
    </Menu>
  </MenuBar>

  <HBox VBox.vgrow="ALWAYS">
        <VBox spacing="10.0">
            <TextField fx:id="searchField" promptText="Search...">
            <VBox.margin>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </VBox.margin></TextField>
            <Button fx:id="productsButton" text="Products" maxWidth="200.0" minWidth="200.0" onAction="#handleProductsButton" />
            <Button text="Add Transaction" maxWidth="200.0" minWidth="200.0">
            <VBox.margin>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </VBox.margin></Button>
            <Button text="Edit Transaction" maxWidth="200.0" minWidth="200.0">
            <VBox.margin>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </VBox.margin></Button>
            <Button text="Delete Transaction" maxWidth="200.0" minWidth="200.0">
            <VBox.margin>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </VBox.margin></Button>
         <HBox.margin>
            <Insets />
         </HBox.margin>
        </VBox>
        <AnchorPane HBox.hgrow="ALWAYS">
            <TableView fx:id="transactionTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <columns>
                    <TableColumn fx:id="idColumn" maxWidth="110.0" minWidth="60.0" prefWidth="100.0" text="ID"/>
                    <TableColumn fx:id="dateColumn" maxWidth="200.0" minWidth="100.0" prefWidth="200.0" text="Date"/>
                    <TableColumn fx:id="typeColumn" maxWidth="200.0" minWidth="100.0" prefWidth="200.0" text="Type"/>
                    <TableColumn fx:id="quantityColumn" maxWidth="110.0" minWidth="60.0" prefWidth="100.0" text="Quantity"/>
                    <TableColumn fx:id="productIdColumn" maxWidth="110.0" minWidth="60.0" prefWidth="100.0" text="ProductID"/>
                    <TableColumn fx:id="userIdColumn" maxWidth="110.0" minWidth="60.0" prefWidth="100.0" text="UserID"/>
                </columns>
            <padding>
               <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
            </padding>
            </TableView>
        </AnchorPane>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
    </HBox>
</VBox>
