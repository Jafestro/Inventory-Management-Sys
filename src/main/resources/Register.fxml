<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Hyperlink?>
<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.reppuhallinta.inventory_management_sys.controller.RegisterController">
    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>
    <VBox alignment="CENTER" spacing="10.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Label text="%label.firstName" />
        <TextField fx:id="firstnameField" promptText="%prompt.firstName" maxWidth="300.0" />
        <Label text="%label.lastName" />
        <TextField fx:id="lastnameField" promptText="%prompt.lastName" maxWidth="300.0" />
        <Label text="%label.username" />
        <TextField fx:id="usernameField" promptText="%prompt.username" maxWidth="300.0"/>
        <Label text="%label.password" />
        <PasswordField fx:id="passwordField" promptText="%prompt.password" maxWidth="300.0" />
        <Label text="%label.confirmPassword" />
        <PasswordField fx:id="confirmPasswordField" promptText="%prompt.confirmPassword" maxWidth="300.0" />
        <Button fx:id="registerButton" text="%button.register" onAction="#handleRegister" prefWidth="130.0" maxWidth="300.0" />
        <Hyperlink styleClass="Hyperlink" fx:id="loginLink" text="%login.link" onAction="#handleLoginLink" />
    </VBox>
</AnchorPane>