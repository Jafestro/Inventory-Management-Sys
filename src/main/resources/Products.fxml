<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.reppuhallinta.inventory_management_sys.controller.ProductViewController">
    
    <HBox VBox.vgrow="ALWAYS">
        <VBox spacing="10.0">
            <TextField fx:id="searchField" promptText="Search...">
            <VBox.margin>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </VBox.margin></TextField>
            <Button fx:id="transactionButton" maxWidth="200.0" minWidth="200.0" onAction="#handleTransactionButtonAction" text="Transactions" />
            <Button fx:id="createProductButton" maxWidth="200.0" minWidth="200.0" onAction="#handleCreateProductButtonAction" text="Create Product">
            <VBox.margin>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </VBox.margin></Button>
            <Button fx:id="editProductButton" maxWidth="200.0" minWidth="200.0" text="Edit Product" onAction="#handleEditProduct">
            <VBox.margin>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </VBox.margin></Button>
            <Button fx:id="deleteProductButton" maxWidth="200.0" minWidth="200.0" onAction="#handleDeleteProductButtonAction" text="Delete Product">
            <VBox.margin>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </VBox.margin></Button>
         <Button fx:id="refreshButton" layoutX="12.0" layoutY="168.0" maxWidth="200.0" minWidth="200.0" onAction="#handleRefreshButtonAction" text="Refresh" />
         <HBox.margin>
            <Insets />
         </HBox.margin>
        </VBox>
        <AnchorPane HBox.hgrow="ALWAYS">
            <TableView fx:id="productTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="113.0" text="ID" />
                    <TableColumn fx:id="nameColumn" prefWidth="326.0" text="Name" />
                    <TableColumn fx:id="quantityColumn" minWidth="0.0" text="Quantity" />
                    <TableColumn fx:id="priceColumn" prefWidth="347.0" text="Price" />
                    <TableColumn fx:id="supplierIDColumn" text="SupplierID" />
                    <TableColumn fx:id="categoryIDColumn" text="CategoryID" />
                </columns>
            <padding>
               <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
            </padding>
            </TableView>
        </AnchorPane>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
    </HBox>
</VBox>
